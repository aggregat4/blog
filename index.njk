<div class="postlist">
  <h2>All Posts</h2>
  <ol class="postlist">
  {# Each tag is exposed as its own collection you can iterate over #}
  {%- for post in collections.post | reverse -%}
    {# isodate is a custom filter defined in .eleventy.js #}
    <li><time datetime="{{ post.data.date | isodate }}">{{ post.data.date | isodate }}</time><a href="{{ post.url }}">{{ post.data.title }}</a></li>
  {%- endfor -%}
  </ol>
</div>
